<Window x:Class="SFRM.Keyboard.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SFRM.Keyboard.Demo"
        mc:Ignorable="d"
        Title="Keyboard Demo" Height="350" Width="525" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="LabelKeys" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" FontFamily="Segoe UI Emoji" FontSize="20" Background="#FFF2F780">
            <TextBlock x:Name="TextKeys" TextWrapping="Wrap" Text="Teclas presionadas ..."/>
        </Label>
    </Grid>
</Window>
